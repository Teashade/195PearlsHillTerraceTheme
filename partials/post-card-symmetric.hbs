<style>
    .post-feed,
    .post-card {
        border: 5px solid black;
    }
    @media (min-width: 701px) {
        .post-card {
            flex: 1 1 33%;
        }
        .post-feed,
        .post-card {
            border: 8px solid black;
        }
    }
    .post-card-content {
        box-shadow: 0 0 200px rgba(0,0,0,0.1) inset;
    }
</style>

<article class="post-card {{post_class}}">
    <a class="post-card-link" href="{{url}}">
        {{#if feature_image}}
            <img
                srcset="{{img_url feature_image size="s"}} 300w,
                        {{img_url feature_image size="m"}} 600w,
                        {{img_url feature_image size="l"}} 1200w,
                        {{img_url feature_image size="xl"}} 2000w,
                        {{img_url feature_image}}"
                sizes="(min-width: 701px) calc(94vw / 3), 88vw"
                src="{{img_url feature_image size="l"}}"
                alt="{{title}}"
            >
        {{/if}}
        <div class="post-card-content" style="">
            <h2 class="post-card-title" style="">{{title}}</h2>
        </div>
    </a>
</article>
